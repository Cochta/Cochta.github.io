---
import { info } from "@data";

import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";
import Layout from "@layouts/Layout.astro";

const Blogs = info.blogs.map((blog) => blog);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Blogs"}
      description={"All blogs are available in this page."}
      ogImageUrl={"/assets/images/profile.png"}
    />
  </head>

  <body>
    <Layout>
      <h1 style="line-height: 1.2;">Blogs</h1>
      <ProjectsWrapper projects={Blogs} />
    </Layout>
  </body>
</html>
